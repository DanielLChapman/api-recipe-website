<%= form_for(@recipe, remote: true, method: "POST", html: {class: "new-recipe-form"}) do |f| %>

	<div class="form-group">
		<label for="title">Title:</label>
		<%= f.text_field :title, class: "form-control", id: "title" %>
	</div>
	<div class="form-group">
		<label for="description">Description:</label>
		<%= f.text_area(:description, class: "form-control", rows: 5, id: "description") %>
	</div>
	<div class="form-group">
		<label for="title">Meal:</label>
		<%= f.text_field :meal, class: "form-control", id: "meal"%>
	</div>
	<div class="form-group">
			<label for="Image">Image:</label>
			<%= f.file_field :picture, class: "form-control", accept: 'image/jpeg,image/gif,image/png' %>
	</div>
    <%= f.submit 'Submit', class: "new-recipe-button" %>
<% end %>