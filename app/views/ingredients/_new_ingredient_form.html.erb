<%= form_for(@ingredient = Ingredient.new, remote: true, url: recipe_ingredients_path, method: "post", html: {class: "new-ingredient-form"}) do |f| %>

	<div class="form-group">
		<label for="amount">Amount:</label>
		<%= f.text_field :amount, class: "form-control", id: "amount" %>
	</div>
	<div class="form-group">
		<label for="Name">Name:</label>
		<%= f.text_field :name, class: "form-control", id: "name" %>
	</div>
    <%= f.submit 'Submit', class: "edit-ingredient-form-button" %>
<% end %>