<%= form_for(@ingredient, remote: true, url: recipe_ingredient_path(@ingredient), method: "patch", html: {class: "edit-ingredients-form"}) do |f| %>

	<div class="form-group">
		<label for="amount">Amount:</label>
		<%= f.text_field :amount, class: "form-control", id: "amount" %>
	</div>
	<div class="form-group">
		<label for="Name">Name:</label>
		<%= f.text_field :name, class: "form-control", id: "name" %>
	</div>
    <%= f.submit 'Submit', class: "edit-ingredient-form-button" %>
<% end %>